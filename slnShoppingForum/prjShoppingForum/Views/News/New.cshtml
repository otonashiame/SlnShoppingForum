@model prjShoppingForum.Models.Entity.tNew

@{
    ViewBag.Title = "新增文章";

}
<script src="https://cdn.ckeditor.com/ckeditor5/16.0.0/classic/ckeditor.js"></script>
<h2>新增</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>最新消息</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fNewsTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fNewsTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fNewsTitle, "", new { @class = "text-danger" })
            </div>
        </div>

C        <div class="form-group">
            @Html.LabelFor(model => model.fNewsDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fNewsDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fNewsDesc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fNewsArticle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.fNewsArticle, new { ValidateRequestMode = "Enabled", id = "editor", @style = "height:350px" })
                <script>
                    ClassicEditor
                        .create(document.querySelector('#editor'))
                        .catch(error => {
                            console.error(error);
                        });
                </script>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fAddUser, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fApproved, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="Radio" type="radio" name="approved" value="Y" /><label for="Radio"> Y </label>
                <label><input id="Radio" type="radio" name="approved" value="N" /> N </label>
            </div>
        </div>
 </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-default" />
            </div>
        </div>

        }

        <div>
            @Html.ActionLink("返回題目選單", "List")
        </div>


